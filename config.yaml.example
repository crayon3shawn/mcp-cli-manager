# MCP CLI Manager 系統配置

# 日誌配置
logging:
  level: info  # debug, info, warn, error
  format: text  # text, json
  file: logs/mcp.log
  max_size: 10MB
  max_files: 5

# 進程管理
process:
  find_method: pgrep  # pgrep 或 ps
  name_pattern: "node.*%s"  # %s 會被替換為服務器名稱
  start_timeout: 30s
  stop_timeout: 30s
  health_check_interval: 5s
  stop_signals:
    - signal: SIGTERM
      wait: 10s
    - signal: SIGINT
      wait: 5s
    - signal: SIGKILL
      wait: 0s

# 安全配置
security:
  allowed_ips: []  # 空列表表示允許所有 IP
  max_failed_attempts: 3
  lockout_duration: 15m
  require_auth: false
  auth_method: none  # none, basic, token
  token_expiry: 24h

# 通知配置
notifications:
  enabled: false
  type: none  # none, email, slack, webhook
  webhook_url: ""
  email:
    smtp_host: ""
    smtp_port: 587
    username: ""
    password: ""
    from: ""
    to: []
