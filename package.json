{
  "name": "mcp-cli-manager",
  "version": "1.0.1",
  "description": "A command-line tool for managing Model Context Protocol (MCP) servers",
  "main": "bin/mcp",
  "bin": {
    "mcp": "./bin/mcp"
  },
  "files": [
    "bin/mcp",
    "lib/**/*.sh",
    "scripts/install.sh",
    "config.yaml.example"
  ],
  "scripts": {
    "start": "./bin/mcp",
    "test": "bats test/*.bats",
    "lint": "shellcheck bin/mcp lib/**/*.sh",
    "format": "shfmt -i 2 -ci -w bin/mcp lib/**/*.sh",
    "version": "./bin/mcp --version",
    "postinstall": "./scripts/install.sh"
  },
  "keywords": [
    "cli",
    "mcp",
    "server",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crayon3shawn/mcp-cli-manager.git"
  },
  "bugs": {
    "url": "https://github.com/crayon3shawn/mcp-cli-manager/issues"
  },
  "homepage": "https://github.com/crayon3shawn/mcp-cli-manager#readme",
  "os": [
    "darwin",
    "linux"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "bats": "^1.10.0"
  }
} 